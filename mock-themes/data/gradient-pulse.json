    "card": {
      "background": "rgba(255, 255, 255, 0.08)",
      "border": "rgba(255, 255, 255, 0.12)"
    },
    "button": {
      "primaryBackground": "linear-gradient(135deg, #f97316, #ef4444)",
      "primaryText": "#0f172a",
      "ghostBackground": "rgba(255, 255, 255, 0.08)",
      "ghostBorder": "rgba(255, 255, 255, 0.32)",
      "ghostText": "#f8fafc",
      "text": "#f97316",
